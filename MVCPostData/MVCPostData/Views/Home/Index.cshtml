@model Person

@* Id *@
@* Name *@
@* Surname *@
@* Age *@
<h1>Driving License Registration Form</h1>

<form method="post">
    <div class="mb-3">
        <label asp-for="Id" class="form-label">Id</label>
        <input type="number" class="form-control" asp-for="Id">
        <span class="text-danger small" asp-validation-for="Id"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Name" class="form-label">Name</label>
        <input type="text" class="form-control" asp-for="Name">
        <span class="text-danger small" asp-validation-for="Name"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Surname" class="form-label">Surname</label>
        <input type="text" class="form-control" asp-for="Surname">
        <span class="text-danger small" asp-validation-for="Surname"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Age" class="form-label">Age</label>
        <input type="number" class="form-control" asp-for="Age">
        <span class="text-danger small" asp-validation-for="Age"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Email" class="form-label">Email</label>
        <input type="email" class="form-control" asp-for="Email">
        <span class="text-danger small" asp-validation-for="Email"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Specialty" class="form-label">Specialty</label>
        <select class="form-select" asp-for="Specialty"  aria-label="Default select example">
            <option selected disabled>Select one of them</option>
            <option value="C# Backend">C# Backend</option>
            <option value="Java Backend">Java Backend</option>
            <option value="Node.js Backend">Node.js Backend</option>
            <option value="MERN Stack">MERN Stack</option>
            <option value="Django Backend">Django Backend</option>
        </select>
        <span class="text-danger small" asp-validation-for="Specialty"></span>
    </div>
    <div class="mb-3">
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio"  asp-for="IsMarried" value="false" checked >
            <label class="form-check-label" asp-for="IsMarried">Single</label>
        </div>
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" asp-for="IsMarried" value="true">
            <label class="form-check-label" asp-for="IsMarried">Married</label>
        </div>
    </div>
    
    <button type="submit" class="btn btn-primary">Submit</button>
</form>