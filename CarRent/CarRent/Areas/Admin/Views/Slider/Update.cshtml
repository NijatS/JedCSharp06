@model CarRent.Models.Slider
<div class="container-fluid p-3 fs-5">
    <div class="row">
        <form method="post" enctype="multipart/form-data">
            <div class="mb-3">
                <label asp-for="Title" class="form-label">Title</label>
                <input type="text" class="form-control border-danger" asp-for="Title">
                <span class="text-danger fs-6" asp-validation-for="Title"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Description" class="form-label">LastName</label>
                <textarea type="text" class="form-control border-danger" asp-for="Description"></textarea>
                <span class="text-danger fs-6" asp-validation-for="Description"></span>
            </div>
            <div class="mb-3">
                <label asp-for="File" class="form-label">Image</label>
                <input type="file" class="form-control border-danger" asp-for="File">
                <span class="text-danger fs-6" asp-validation-for="File"></span>
            </div>
            <button class="btn btn-primary w-100 mt-3" type="submit">Update Slider</button>
        </form>
    </div>
</div>
